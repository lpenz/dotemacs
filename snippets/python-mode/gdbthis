# -*- mode: snippet -*-
# name: gdbthis
# key: gdbthis
# expand-env: ((yas-indent-line 'fixed))
# --
def gdbthis(breaks=[]):
    import subprocess, os
    import os
    gdbcmd = [
        'tmux', 'split-window', '-h',
        'sudo', 'gdb',
        '-p', str(os.getpid()),
    ]
    for b in breaks:
        gdbcmd.extend(['-ex', 'break ' + b])
    gdbcmd.extend(['-ex', 'continue'])
    subprocess.call(gdbcmd)
